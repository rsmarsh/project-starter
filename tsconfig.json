{
  "compilerOptions": {
    "outDir": "./dist/",
    "baseUrl": ".",
    "paths": {
      "Components*": ["src/components*"]
    },
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "es6",
    "target": "esnext",
    "types": ["webpack-env", "node"],
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true
  }
}
